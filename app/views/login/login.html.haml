
%header{:class => "row"}
  %div{:class => "col-12 header_padding"}
    %h1{:class => "header_text"} Login Page

%section{:class => "row"}
  %div{:class => "box"}
    = form_tag login_path, :method => :post do
      %fieldset{:class => "field_text col-8"}
        %label Email
        %br
        %input{:name => "email", :type => "text", :required => true}
      
      %fieldset{:class => "field_text col-8"}
        %label Password
        %br
        %input{:name => "password", :type => "password", :required => true}

      %fieldset{:class => "field_text button col-8"}
        %input{:type => "submit", :value => "Sign in"} 