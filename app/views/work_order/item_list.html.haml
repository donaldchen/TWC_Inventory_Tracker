%header{:class => "row header"}
  %div{:class => "col-12 header_padding"}
    %h1{:class => "header_text"} Item Page
%p= @entry.Special_Instructions__c
%div{:class => "box_outline"}    
  %section{:class => "row"}
    %div{:class => "col-12"}
      %table#work_order
        %thead
          %tr
            %th Item
            %th{:class => "row"}
              %div{:class => "col-6"}
                Quantity
              %div{:class => "col-6"}
                Update  
            %th Delete
        %tbody
          - @list_details.each do |item|
            %tr
              %td{:class => "item"}= item.Program_Item__c
              %td
                = form_tag item_list_update_path, :method => :post do
                  = text_field :item, :newvalue, :value => item.Quantity__c, :class => "quantity"
                  = text_field :item, :pid, :value => item.Id, :type => "hidden"
                  = submit_tag 'Update', :class => "update_btn"
              %td= link_to 'delete', item_list_delete_path({:pid => item.Id, :id => @entry.id__c}), :method => :delete

%section
  = button_to("Add", add_item_path({:id => @entry.id__c}), :method => :get,)
  = button_to("Checkout", confirmation_path, :method => :get,)
  = button_to("Cancel", work_order_home_path, :method => :get,)
