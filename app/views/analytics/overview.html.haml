%div{:class => "strip"}
%header{:class => "row header"}
  %div{:class => "col-2"}
    = link_to image_tag('back_btn.png', :class => "back_arrow"), analytics_path, :id => "back_btn"
  %div{:class => "col-8 header_padding"}
    %h1{:class => "header_text"} Inventory Overview

%section{:class => "row"}
  %div{:class => "col-12 box_outline"}
    %table#items{:border => "1"}
      %thead
        %tr
          %th= link_to 'Item', analytics_overview_path(:order => :name)
          %th= link_to 'Quantity', analytics_overview_path(:order => :quantity)
          %th= link_to 'Price', analytics_overview_path(:order => :price)
      %tbody
        -@items.each do |item|
          %tr
            %td= item.Name
            %td= item.Quantity__c
            %td= item.Price__c
