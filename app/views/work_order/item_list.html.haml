%header{:class => "row header"}
  %div{:class => "col-12 header_padding"}
    %h1{:class => "header_text"} Item Page

%div{:class => "box_outline"}    
  %section{:class => "row"}
    %div{:class => "col-12"}
      %table#work_order
        %thead
          %tr
            %th Item
            %th Quantity
            %th Update
            %th Delete
        %tbody
          - @list_details.each do |item|
            %tr  
              %td{:class => "item"}= item.Program_Item__c
              %td
                = text_field :item, :newvalue, :value => item.Quantity__c, :class => "quantity"
                = text_field :item, :pid, :value => item.Id, :type=>"hidden"
              %td
                = button_to("Update", item_list_update_path, :class => "update_btn", :method => :post,)
              %td= link_to 'delete', item_list_delete_path({:pid => item.Id, :id => @entry.id__c}), :method => :delete
            
      = form_tag add_item_path({:id => @entry.id__c}), :method => :get do
        = submit_tag 'Add'
      = form_tag confirmation_path, :method => :get do
        = submit_tag 'Checkout'
      = form_tag work_order_home_path, :method => :get do
        = submit_tag 'Cancel'