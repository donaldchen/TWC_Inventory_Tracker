%header{:class => "row header"}
  %div{:class => "col-2"}
    = link_to image_tag('back_btn.png', :class => "back_arrow"), analytics_path, :id => "back_btn"
  %div{:class => "col-8 header_padding"}
    %h1{:class => "header_text"}History

-@dates.each do |d|
  %br
  %div{:class => "dateentry"}
    %div{:class => "datelabel"}
      %label= d.d.strftime("%B %d, %Y")
    %table{:class => "datetable"}
      %thead
        %tr
          %th= "Item"
          %th= "Quantity Added"
          %th= "Quantity Subtracted"
          %th= "Starting Amount"
          %th= "Ending Amount"
      %tbody
        -d.items.each do |k, v|
          %tr
            %td= k
            %td
              %font{:color => "green"}= v[0]
            %td
              %font{:color => "red"}= v[1]
            %td= v[2]
            %td= v[3]
    
 