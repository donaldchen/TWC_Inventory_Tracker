%header{:class => "row header"}
  %div{:class => "col-2 back_header"}
    = form_tag analytics_path, :method => :get do
      %i{:class => "fa fa-chevron-left"}
        = submit_tag 'Back', :class => "back_btn"
  %div{:class => "col-8 header_padding"}
    %h1{:class => "header_text"}Inventory Overview

%section{:class => "row"}
  %div{:class => "col-12 box_outline"}
    %table#items{:border => "1"}
      %thead
        %tr
          %th= link_to 'Name', analytics_overview_path(:order => :name)
          %th= link_to 'Quantity', analytics_overview_path(:order => :quantity)
          %th= link_to 'Price', analytics_overview_path(:order => :price)
      %tbody
        -@items.each do |item|
          %tr{:class => "hi"}
            %td{:class => "padding"}= item.Name
            %td{:class => "align_quantity padding"}= item.Quantity__c
            %td= item.Price__c
